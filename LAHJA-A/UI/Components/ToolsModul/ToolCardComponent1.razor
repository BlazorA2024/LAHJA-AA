@using Data.ToolsModul

@if (Prams != null)
{
            <div class="bg-dark-800 rounded-xl overflow-hidden shadow-lg card-hover animate-card">

        <div class="p-5">
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-lg gradient-bg flex items-center justify-center text-white mr-4">
                    <i class="@Prams.DataBuild.Icon text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white">@Prams.DataBuild.Title</h3>
            </div>
            <p class="text-gray-400 mb-6">@Prams.DataBuild.Description</p>
            <div class="flex justify-between items-center">
                <span class="text-sm text-purple-400"><i class="fas fa-bolt mr-1"></i> @Prams.DataBuild.Model</span>
                <button class="px-4 py-2 rounded-lg gradient-bg text-white hover:opacity-90 transition text-sm">
                    @Prams.DataBuild.ButtonLabel
                </button>
            </div>
        </div>
    </div>
}

<!-- Wasm -->
@code {
    [Parameter] public ListUnifiedToolsModul? Prams { get; set; }
}
