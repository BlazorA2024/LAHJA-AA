                ControlHeader = new DataControlHeader
                {
                    Title = "Controls",
                    StatusText = "Inactive",
                    StatusColor = "bg-red-500"
                },
                MicButton = new DataMicToggleButton
                {
                    Label = "Start Analyzer",
                    Icon = "fas fa-microphone",
                    BackgroundColor = "bg-blue-600",
                    HoverColor = "hover:bg-blue-700"
                },
                IFrequency = new DataFrequency
                {
                    Title="Current Frequency",
                    Frequency=0,
                }


    }
};



    [Parameter]
    public DataAddSpectral? DataBuild { get; set; }

    [Parameter]
    public CardListDataAddSpectral Prams { get; set; }


    protected override void OnInitialized()
    {
        if (DataBuild == null)
        {
            DataBuild = Spectral[0];

        }

        Prams = CardListDataAddSpectral.Create(DataBuild);
        base.OnInitialized();
    }
}




