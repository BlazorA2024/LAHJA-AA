 @using Data.SpectralVoice
@if (Prams != null)
{
<div class="lg:w-2/3">
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
        <div class="bg-gradient-to-b from-gray-700 to-gray-800">
            <canvas id="visualizer" class="canva w-full h-64 lg:h-96"></canvas>
        </div>
        <div class="p-4 flex justify-between items-center border-t border-gray-700">
            <div class="text-sm text-gray-400">
                <span>@Prams.DataBuild.Name </span>
                <select id="fftSize" class="bg-gray-700 text-white rounded px-2 py-1 text-sm outline-none" @bind="@Prams.DataBuild.SelectedValue">
                    @foreach (var size in Prams.DataBuild.Sizes)
                    {
                        <option value="@size">@size</option>
                    }
                   
                </select>
            </div>
                <div id="fpsCounter" class="text-sm text-gray-400">FPS: 0</div>

@*             <div id="fpsCounter" class="text-sm text-gray-400">@Prams.DataBuild.Title</div>
 *@        </div>
    </div>

    <div class="mt-4">
        <h3 class="text-lg font-medium mb-2 text-gray-300">@Prams.DataBuild.Description</h3>
        <div id="barVisualizer" class="bar-container">
            <!-- Bars will be generated by JavaScript -->
        </div>
    </div>
</div>

    
}
