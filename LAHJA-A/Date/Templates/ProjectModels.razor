<section id="projects" class="py-16 px-6">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center section-title">
            <span class="gradient-text">Featured Projects</span>
        </h2>

        <div class="space-y-12">
            @if (Projects != null && Projects.Any())
            {
                @foreach (var project in Projects)
                {
                    <div class="card-gradient rounded-xl overflow-hidden border border-slate-700 glow-effect">
                        <div class="md:flex">
                            <div class="md:w-1/3 bg-slate-800 p-6 flex items-center justify-center">
                                <div class="text-center">
                                    <i class="@project.Icon text-6xl mb-4 @project.IconColor"></i>
                                    <h3 class="text-xl font-bold">@project.Title</h3>

                                    <div class="flex justify-center space-x-2 mt-4">
                                        @foreach (var tag in project.Tags)
                                        {
                                            <span class="bg-slate-700 px-2 py-1 rounded-full text-xs">@tag</span>
                                        }
                                    </div>

                                    <a href="@project.Link" target="_blank" class="inline-block mt-4 text-blue-400 hover:text-blue-300">
                                        View Project <i class="fas fa-external-link-alt ml-1"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="md:w-2/3 p-8">
                                <h3 class="text-2xl font-bold mb-4">@project.Headline</h3>
                                <p class="text-slate-300 mb-4">@project.Description</p>

                                <ul class="space-y-2 mb-6">
                                    @foreach (var feature in project.Features)
                                    {
                                        <li class="flex items-start">
                                            <i class="fas fa-check mr-2 mt-1 text-green-400"></i>
                                            <span>@feature</span>
                                        </li>
                                    }
                                </ul>

                                <div class="flex flex-wrap gap-2">
                                    @foreach (var skill in project.Skills)
                                    {
                                        <span class="bg-slate-800/70 border border-slate-700 px-3 py-1 rounded-full text-xs">@skill</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

