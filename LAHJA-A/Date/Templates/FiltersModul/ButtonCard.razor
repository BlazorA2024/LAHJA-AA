 @using Data.Modelues
@if(Prams !=null){
@if (!string.IsNullOrEmpty(Prams.DataBuild.Label)) 
{
    <button class="px-4 py-2 rounded-full transition
                                @(Prams.DataBuild.IsPrimary ? "gradient-bg text-white hover:opacity-90" : "bg-dark-800 text-gray-300 hover:bg-dark-700 hover:text-white")
                                @(Prams.DataBuild.IsActive ? " active-model" : "")">
            @if (!string.IsNullOrEmpty(Prams.DataBuild.Icon))
        {
                <i class="@Prams.DataBuild.Icon mr-2"></i>
        }
            @Prams.DataBuild.Label
    </button>
}
}

