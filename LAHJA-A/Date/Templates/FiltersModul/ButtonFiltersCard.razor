@*  @using Data.Modelues
@using Microsoft.AspNetCore.Components

@if (Prams != null && Prams.Any())
{
    <div class="mb-8">
        @if (!string.IsNullOrEmpty(Prams.First().Title))
        {
            <h3 class="text-lg font-medium text-gray-300 mb-3">@Prams.First().Title</h3>
        }

        <div class="flex flex-wrap gap-3">
            @foreach (var item in Prams)
            {
                @if (!string.IsNullOrEmpty(item.Label)) // لا تعرض الزر إلا إذا كان له Label
                {
                    <button class="px-4 py-2 rounded-full transition
                        @(item.IsPrimary ? "gradient-bg text-white hover:opacity-90" : "bg-dark-800 text-gray-300 hover:bg-dark-700 hover:text-white")
                        @(item.IsActive ? " active-model" : "")">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="@item.Icon mr-2"></i>
                        }
                        @item.Label
                    </button>
                }
            }
        </div>
    </div>
}
else
{
    <p>Loading...</p>
}

